<% } -%>
<% if (check(assets.page.less_ie9)) { -%>
    /* less page ie9 */
<%- less(assets.page.less_ie9) -%>
<% } -%>
  </style>
  <![endif]-->
<% } -%>
<% } -%>
</head>
<body>